<UserControl x:Class="POS.CustomControl.Supplier_Add_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validations="clr-namespace:POS.Validations"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" MinWidth="800" MinHeight="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/UltraModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <validations:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{StaticResource BackgroundGradientBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="20" Padding="28,20" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#C2410C" Offset="0"/>
                        <GradientStop Color="#EA580C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="إضافة / تعديل مورد" FontSize="24" FontWeight="Bold" Foreground="White" FlowDirection="RightToLeft"/>
                    <TextBlock Text="إدارة بيانات الموردين ومعلومات التوريد" FontSize="12" Foreground="#FFEDD5" Margin="0,4,0,0" FlowDirection="RightToLeft"/>
                </StackPanel>
            </Border>

            <!-- Form -->
            <Border Grid.Row="1" Style="{StaticResource UltraModernCard}" Padding="32,28">
                <StackPanel>
                    <!-- Section 1: Basic Info -->
                    <TextBlock Text="المعلومات الأساسية" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Gray900Brush}" Margin="0,0,0,16" FlowDirection="RightToLeft"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="اسم المورد" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Name}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="الشركة" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Company}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Section 2: Contact Info -->
                    <TextBlock Text="معلومات الاتصال" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Gray900Brush}" Margin="0,0,0,16" FlowDirection="RightToLeft"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="البريد الإلكتروني" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Email}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="الهاتف" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Phone}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="العنوان" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Address}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="المدينة" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding City}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Section 3: Financial -->
                    <TextBlock Text="المعلومات المالية" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Gray900Brush}" Margin="0,0,0,16" FlowDirection="RightToLeft"/>
                    <Grid Margin="0,0,0,28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="الرصيد الافتتاحي" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding OpeningBalance}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ملاحظات" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                            <TextBox Text="{Binding Notes}" Style="{StaticResource UltraModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="حفظ" Style="{StaticResource UltraModernSuccessButton}" Width="160" Command="{Binding SaveCommand}"/>
                        <Button Content="إلغاء" Style="{StaticResource UltraModernDangerButton}" Width="140" Margin="12,0,0,0" Command="{Binding CancelCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
