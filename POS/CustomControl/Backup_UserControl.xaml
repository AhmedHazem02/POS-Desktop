<UserControl x:Class="POS.CustomControl.Backup_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d" MinWidth="800" MinHeight="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/UltraModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <validations:IndexPlusOneConverter x:Key="IndexPlusOneConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="20" Margin="20,20,20,16" Padding="32,24">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#047857" Offset="0"/>
                    <GradientStop Color="#10B981" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="النسخ الاحتياطي" FontSize="28" FontWeight="Bold" Foreground="White" FlowDirection="RightToLeft"/>
                <TextBlock Text="حماية بياناتك من خلال النسخ الاحتياطي المنتظم" FontSize="13" Foreground="#D1FAE5" Margin="0,4,0,0" FlowDirection="RightToLeft"/>
            </StackPanel>
        </Border>

        <!-- Action Cards -->
        <Grid Grid.Row="1" Margin="20,0,20,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Create Backup Card -->
            <Border Grid.Column="0" Style="{StaticResource UltraModernCard}" Padding="24,20">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="64" Height="64" CornerRadius="16" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#047857" Offset="0"/>
                                <GradientStop Color="#10B981" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Path Fill="White" Width="32" Height="32" Stretch="Uniform"
                              Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"/>
                    </Border>
                    <TextBlock Text="إنشاء نسخة احتياطية" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" 
                               TextAlignment="Center" Margin="0,0,0,12" FlowDirection="RightToLeft"/>
                    <Button Content="نسخ احتياطي الآن" Style="{StaticResource UltraModernSuccessButton}" 
                            HorizontalAlignment="Center" Command="{Binding CreateBackupCommand}"/>
                </StackPanel>
            </Border>

            <!-- Restore Card -->
            <Border Grid.Column="2" Style="{StaticResource UltraModernCard}" Padding="24,20">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="64" Height="64" CornerRadius="16" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1E40AF" Offset="0"/>
                                <GradientStop Color="#3B82F6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Path Fill="White" Width="32" Height="32" Stretch="Uniform"
                              Data="M13,3A9,9 0 0,0 4,12H1L4.89,15.89L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,19.99 10.51,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3Z"/>
                    </Border>
                    <TextBlock Text="استعادة من نسخة احتياطية" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" 
                               TextAlignment="Center" Margin="0,0,0,12" FlowDirection="RightToLeft"/>
                    <Button Content="استعادة البيانات" Style="{StaticResource UltraModernPrimaryButton}" 
                            HorizontalAlignment="Center" Command="{Binding RestoreBackupCommand}"/>
                </StackPanel>
            </Border>

            <!-- Storage Location Card -->
            <Border Grid.Column="4" Style="{StaticResource UltraModernCard}" Padding="24,20">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="64" Height="64" CornerRadius="16" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#C2410C" Offset="0"/>
                                <GradientStop Color="#EA580C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Path Fill="White" Width="32" Height="32" Stretch="Uniform"
                              Data="M20,18H4V8H20M20,6H12L10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6Z"/>
                    </Border>
                    <TextBlock Text="موقع التخزين" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" 
                               TextAlignment="Center" Margin="0,0,0,12" FlowDirection="RightToLeft"/>
                    <Button Content="اختيار مجلد" Style="{StaticResource UltraModernWarningButton}" 
                            HorizontalAlignment="Center" Command="{Binding SelectStorageCommand}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Backup History -->
        <Border Grid.Row="2" Style="{StaticResource UltraModernCard}" Margin="20,0,20,20" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource Gray50}" Padding="24,16" BorderBrush="{StaticResource Gray200}" BorderThickness="0,0,0,1">
                    <Grid>
                        <TextBlock Text="سجل النسخ الاحتياطي" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" FlowDirection="RightToLeft" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding BackupPath}" FontSize="12" Foreground="{StaticResource Gray500}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="240,0,0,0"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding BackupHistory}" Style="{StaticResource UltraModernDataGrid}"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Width="60" 
                                            Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={StaticResource IndexPlusOneConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource Gray500}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="اسم الملف" Width="2.5*" Binding="{Binding FileName}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource Gray900Brush}"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="التاريخ" Width="1.5*" Binding="{Binding Date, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                        <DataGridTextColumn Header="الحجم" Width="1*" Binding="{Binding Size}"/>
                        <DataGridTemplateColumn Header="حالة" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#D1FAE5" CornerRadius="8" Padding="12,6" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" 
                                                   Foreground="#047857" FlowDirection="RightToLeft"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="الإجراءات" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource UltraModernGhostButton}" Width="32" Height="32" Padding="0" ToolTip="استعادة"
                                                Command="{Binding DataContext.RestoreFromFileCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <Path Fill="{StaticResource Success600Brush}" Width="14" Height="14" Stretch="Uniform"
                                                  Data="M13,3A9,9 0 0,0 4,12H1L4.89,15.89L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,19.99 10.51,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3Z"/>
                                        </Button>

                                        <Button Style="{StaticResource UltraModernGhostButton}" Width="32" Height="32" Padding="0" Margin="8,0,0,0" ToolTip="حذف"
                                                Command="{Binding DataContext.DeleteBackupCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <Path Fill="{StaticResource Danger600Brush}" Width="14" Height="14" Stretch="Uniform"
                                                  Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
