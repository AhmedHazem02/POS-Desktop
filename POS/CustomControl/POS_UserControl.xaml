
<UserControl x:Class="POS.CustomControl.POS_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d"
             MinWidth="1280"
             MinHeight="720"
             FontFamily="Cairo, Segoe UI"
             FlowDirection="RightToLeft">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F172A" Offset="0"/>
            <GradientStop Color="#1E293B" Offset="0.5"/>
            <GradientStop Color="#334155" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <UserControl.Resources>
        <validations:DoubleTextConverter x:Key="DoubleTextConverter" />
        <validations:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        <!-- Neon Glow Effects -->
        <DropShadowEffect x:Key="NeonGreenGlow" Color="#00FF88" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        <DropShadowEffect x:Key="NeonBlueGlow" Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
        <DropShadowEffect x:Key="NeonPurpleGlow" Color="#A855F7" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
        <DropShadowEffect x:Key="SoftGlow" Color="#FFFFFF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>

        <!-- Glass Brushes -->
        <SolidColorBrush x:Key="GlassPanelBrush" Color="#FFFFFF" Opacity="0.25"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="#FFFFFF" Opacity="0.4"/>
        <SolidColorBrush x:Key="ActiveGreenBrush" Color="#10F981"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#E2E8F0"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="FontFamily" Value="Cairo, Segoe UI"/>
        </Style>

        <!-- Glass Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassPanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect" Value="{StaticResource SoftGlow}"/>
        </Style>

        <!-- Circular Image Style -->
        <Style x:Key="CircularImage" TargetType="Ellipse">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Stroke" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GlassPanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Product Row Style -->
        <Style x:Key="ProductRowBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.6">
                        <GradientStop Color="#A855F7" Offset="0"/>
                        <GradientStop Color="#7C3AED" Offset="0.5"/>
                        <GradientStop Color="#10B981" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>

        <!-- Quantity Control Style -->
        <Style x:Key="QuantityButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GlassPanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Style="{StaticResource GlassCard}"
                Padding="15,10"
                Effect="{StaticResource NeonBlueGlow}"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <TextBlock Text="LOGO HERE" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                
                <!-- Search Bar -->
                <Border Grid.Column="1" 
                        Background="{StaticResource GlassPanelBrush}"
                        BorderBrush="{StaticResource GlassBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="15"
                        Padding="12,8"
                        MaxWidth="500">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Magnify" 
                                               Width="22" Height="22"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>

                        <TextBox x:Name="SearchBox" 
                                 Grid.Column="1"
                                 Text="{Binding BarcodeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontSize="14"
                                 CaretBrush="White"
                                 VerticalContentAlignment="Center"
                                 materialDesign:HintAssist.Hint="مسح الباركود أو البحث..."
                                 materialDesign:HintAssist.Foreground="{StaticResource TextSecondaryBrush}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SearchProductCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <Button Grid.Column="2"
                                Style="{StaticResource IconButton}"
                                Command="{Binding SearchProductCommand}"
                                Background="Transparent"
                                BorderThickness="0">
                            <materialDesign:PackIcon Kind="Barcode" Width="18" Height="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Button>

                        <TextBlock Grid.Column="1"
                                   Text="البحث بالباركود أو اسم المنتج..."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <materialDesign:PackIcon Grid.Column="2" 
                                               Kind="Barcode"
                                               Width="22" Height="22"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Cashier Info & Status Icons -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    
                    <!-- Cashier Info -->
                    <Border Background="{StaticResource GlassPanelBrush}"
                            BorderBrush="{StaticResource GlassBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12,6"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="35" Height="35" Margin="0,0,8,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding CashierImagePath, TargetNullValue=/Assets/pic/default-avatar.png}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="White">
                                    <Run Text="كاشير: "/>
                                    <Run Text="{Binding CashierName}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Status Icons -->
                    <Button Style="{StaticResource IconButton}" Margin="3,0" ToolTip="WiFi متصل">
                        <materialDesign:PackIcon Kind="Wifi" Foreground="#10F981" Width="18" Height="18"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="3,0" ToolTip="الطابعة جاهزة">
                        <materialDesign:PackIcon Kind="Printer" Foreground="#10F981" Width="18" Height="18"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="3,0" ToolTip="السحابة متصلة">
                        <materialDesign:PackIcon Kind="CloudUpload" Foreground="#10F981" Width="18" Height="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Product List -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="المنتج" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="السعر" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,100,0"/>
                        <TextBlock Grid.Column="2" 
                                   Text="الكمية" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,80,0"/>
                        <TextBlock Grid.Column="3" 
                                   Text="الإجمالي" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,40,0"/>
                    </Grid>

                    <!-- Product List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding CartItemsList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductRowBorder}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Info -->
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding Product.ImagePath, TargetNullValue=https://i.pravatar.cc/150}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Product.Name}" 
                                                           FontSize="15" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding SalePrice, StringFormat={}{0:F2}}" 
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,50,0"/>

                                            <!-- Quantity Control -->
                                            <Border Grid.Column="2"
                                                    Background="#20FFFFFF"
                                                    BorderBrush="{StaticResource GlassBorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Padding="5"
                                                    Margin="0,0,30,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Style="{StaticResource QuantityButton}"
                                                            Content="-"
                                                            Command="{Binding DataContext.DecreaseCartItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <TextBlock Text="{Binding Quantity}" 
                                                               FontSize="16" 
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"
                                                               Margin="15,0"
                                                               MinWidth="30"
                                                               TextAlignment="Center"/>
                                                    <Button Style="{StaticResource QuantityButton}"
                                                            Content="+"
                                                            Command="{Binding DataContext.IncreaseCartItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Total -->
                                            <TextBlock Grid.Column="3" 
                                                       Text="{Binding Total, StringFormat={}{0:F2}}" 
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="#10F981"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,30,0"/>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="4"
                                                    Style="{StaticResource IconButton}"
                                                    Command="{Binding DataContext.RemoveCartItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" 
                                                                       Width="18" Height="18"
                                                                       Foreground="#EF4444"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer Summary -->
                    <Border Grid.Row="2" 
                            Background="#20000000"
                            BorderBrush="{StaticResource GlassBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="15"
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock FontSize="14">
                                    <Run Text="الإجمالي: " Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text="{Binding TotalAmount, StringFormat={}{0:F2}}" Foreground="#10F981" FontWeight="Bold"/>
                                    <Run Text=" ريال" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                                <TextBlock FontSize="13" Margin="0,3,0,0">
                                    <Run Text="الكمية: " Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text="{Binding TotalQuantity}" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1" Text="إجمالي السلة" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: Sidebar -->
            <StackPanel Grid.Column="1">
                
                <!-- Invoice Details Card -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15" Effect="{StaticResource NeonBlueGlow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="تفاصيل الفاتورة" 
                                       FontSize="15" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Style="{StaticResource IconButton}" 
                                        Command="{Binding CancelInvoiceCommand}"
                                        ToolTip="إلغاء"
                                        Margin="0,0,5,0">
                                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Foreground="#EF4444"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" 
                                        Command="{Binding PrintInvoiceCommand}"
                                        ToolTip="طباعة">
                                    <materialDesign:PackIcon Kind="Printer" Width="18" Height="18" Foreground="#10F981"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <Border Background="#10FFFFFF" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                            <TextBlock FontSize="13" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="رقم الفاتورة: #"/>
                                <Run Text="{Binding InvoiceNumber, FallbackValue='000001'}" FontWeight="Bold" Foreground="White"/>
                            </TextBlock>
                        </Border>
                        
                        <StackPanel>
                            <Grid Margin="0,5">
                                <TextBlock Text="الإجمالي الفرعي" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock HorizontalAlignment="Left" FontSize="13" Foreground="White" FontWeight="SemiBold">
                                    <Run Text="{Binding SubTotal, StringFormat={}{0:F2}}"/>
                                    <Run Text=" ريال"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,5">
                                <TextBlock Text="الضريبة (15%)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock HorizontalAlignment="Left" FontSize="13" Foreground="#60A5FA" FontWeight="SemiBold">
                                    <Run Text="{Binding TaxAmount, Mode=OneWay, StringFormat={}{0:F2}}"/>
                                    <Run Text=" ريال"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,5">
                                <TextBlock Text="الخصم" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock HorizontalAlignment="Left" FontSize="13" Foreground="#F59E0B" FontWeight="SemiBold">
                                    <Run Text="{Binding DiscountAmount, StringFormat={}{0:F2}}"/>
                                    <Run Text=" ريال"/>
                                </TextBlock>
                            </Grid>
                            
                            <Separator Background="#30FFFFFF" Margin="0,8"/>
                            
                            <Grid Margin="0,8,0,0">
                                <TextBlock Text="الإجمالي النهائي" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                <TextBlock HorizontalAlignment="Left" FontSize="18" Foreground="#10F981" FontWeight="Bold">
                                    <Run Text="{Binding TotalAmount, StringFormat={}{0:F2}}"/>
                                    <Run Text=" ريال"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Customer Payment Status Card -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15" Effect="{StaticResource NeonPurpleGlow}">
                    <StackPanel>
                        <TextBlock Text="حالة الدفع للعميل" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Ellipse Width="45" Height="45" Margin="0,0,12,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding SelectedCustomer.ImagePath, TargetNullValue=/Assets/pic/default-avatar.png}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="14" FontWeight="Bold" Foreground="White" TextWrapping="Wrap">
                                    <Run Text="{Binding SelectedCustomer.Name, FallbackValue='عميل عام'}"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,0">
                                    <Run Text="{Binding SelectedCustomer.Phone, FallbackValue='لا يوجد رقم'}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                        
                        <Border Background="#10FFFFFF" CornerRadius="8" Padding="10" Margin="0,10,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel>
                                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Text="المدفوع"/>
                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="#10F981" Margin="0,3,0,0">
                                        <Run Text="{Binding PaidAmount, StringFormat={}{0:F2}}"/>
                                        <Run Text=" ريال"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Text="المتبقي"/>
                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="#EF4444" Margin="0,3,0,0">
                                        <Run Text="{Binding RemainingAmount, StringFormat={}{0:F2}}"/>
                                        <Run Text=" ريال"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <Grid Margin="0,8,0,0">
                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="إجمالي الديون: "/>
                                <Run Text="{Binding SelectedCustomer.TotalDebt, StringFormat={}{0:F2}, FallbackValue=0.00}" 
                                     FontWeight="Bold" 
                                     Foreground="#F59E0B"/>
                                <Run Text=" ريال"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Barcode Result Card -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15" Effect="{StaticResource SoftGlow}">
                    <StackPanel>
                        <TextBlock Text="نتيجة مسح الباركود" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:PackIcon Kind="Barcode" 
                                                   Width="40" Height="40"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap">
                                    <Run Text="اسم المنتج: "/>
                                    <Run Text="{Binding ScannedProductName, FallbackValue='لا يوجد منتج'}"/>
                                </TextBlock>
                                <TextBlock FontSize="26" FontWeight="Bold" Foreground="#10F981" Margin="0,5,0,0">
                                    <Run Text="السعر: "/>
                                    <Run Text="{Binding ScannedProductPrice, StringFormat={}{0:F2}}"/>
                                    <Run Text=" ريال"/>
                                </TextBlock>
                                <TextBlock Foreground="#10F981" FontSize="13" Margin="0,5,0,0">
                                    <Run Text="المخزون المتاح: "/>
                                    <Run Text="{Binding ScannedProductStock, FallbackValue=0}" FontWeight="Bold"/>
                                    <Run Text=" قطعة"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- CRM Card -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Smart Customer CRM" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            
                            <materialDesign:PackIcon Grid.Column="1" 
                                                   Kind="AccountCircle"
                                                   Width="24" Height="24"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <!-- Search Box -->
                        <Border Background="#20FFFFFF"
                                BorderBrush="{StaticResource GlassBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="10,6"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Kind="Magnify" 
                                                       Width="18" Height="18"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                
                                <TextBox Grid.Column="1"
                                         Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="13"
                                         Foreground="White"
                                         CaretBrush="White"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="بحث عن عميل..."
                                         materialDesign:HintAssist.Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Customer List -->
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TopCustomers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#20FFFFFF"
                                                BorderBrush="{StaticResource GlassBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="10"
                                                Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                            Command="{Binding DataContext.SelectCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Ellipse Width="35" Height="35" Margin="0,0,10,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding ImagePath, TargetNullValue=/Assets/pic/default-avatar.png}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="White">
                                                        <Run Text="{Binding Name, Mode=OneWay}"/>
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding LoyaltyTier, Mode=OneWay, FallbackValue='جديد'}"/>
                                                        <Run Text=") - "/>
                                                        <Run Text="{Binding LoyaltyPoints, Mode=OneWay, FallbackValue=0}"/>
                                                        <Run Text=" نقطة"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Complete Payment Button -->
                <Border Background="{StaticResource ActiveGreenBrush}"
                        BorderBrush="#10F981"
                        BorderThickness="1"
                        CornerRadius="15"
                        Padding="15"
                        Effect="{StaticResource NeonGreenGlow}"
                        Cursor="Hand">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CompletePaymentCommand}">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <materialDesign:PackIcon Kind="CheckCircle" 
                                                           Width="28" Height="28"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="إتمام عملية الدفع"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
