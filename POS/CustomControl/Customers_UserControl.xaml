<UserControl x:Class="POS.CustomControl.Customers_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d"
             MinWidth="1200"
             MinHeight="700"
             FontFamily="Segoe UI"
             FlowDirection="RightToLeft">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/UltraModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <validations:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <validations:BalanceToBrushConverter x:Key="CustomerBalanceBrushConverter"
                                                 PositiveBrush="#10B981"
                                                 NegativeBrush="#EF4444"
                                                 NeutralBrush="#F59E0B"/>
            <validations:InitialsConverter x:Key="InitialsConverter"/>
            <validations:BalanceToColorConverter x:Key="BalanceToColorConverter"/>

            <!-- Customer Card Style -->
            <Style x:Key="CustomerCardStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F8FAFC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Mini Stat Card Style -->
            <Style x:Key="MiniStatCard" TargetType="Border">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#000000" Opacity="0.06"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Transaction Row Style -->
            <Style x:Key="TransactionRowStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F1F5F9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="420" x:Name="TransactionsColumn"/>
        </Grid.ColumnDefinitions>

        <!-- ══════════════════════════════════════════════════════════ -->
        <!--                    MAIN CUSTOMERS PANEL                    -->
        <!-- ══════════════════════════════════════════════════════════ -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Margin="20,20,20,16" CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E40AF" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="0.5"/>
                        <GradientStop Color="#0EA5E9" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#3B82F6" BlurRadius="25" ShadowDepth="0" Opacity="0.35"/>
                </Border.Effect>

                <Grid Margin="28,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0" Width="60" Height="60" CornerRadius="16"
                            Background="White" Margin="0,0,20,0">
                        <Border.Effect>
                            <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <materialDesign:PackIcon Kind="AccountGroup" Width="32" Height="32"
                                                Foreground="#3B82F6" HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="إدارة العملاء" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="عرض وإدارة جميع بيانات العملاء والمعاملات"
                                   FontSize="13" Foreground="#E0E7FF" Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Add & Export Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="+ إضافة عميل"
                                Padding="20,10"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Background="White"
                                Foreground="#1E40AF"
                                Click="AddCustomer_Click"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                                        CornerRadius="10" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#F0F9FF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.Effect>
                                <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                        
                        <Button Command="{Binding ExportCustomersCommand}"
                                ToolTip="تصدير العملاء"
                                Cursor="Hand"
                                Visibility="{Binding HasCustomers, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bd" Background="#10B981" CornerRadius="10" Padding="20,10">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Export" Width="16" Height="16"
                                                                                Foreground="White" VerticalAlignment="Center"/>
                                                        <TextBlock Text="تصدير" FontSize="13" Foreground="White"
                                                                   Margin="6,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#059669"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.Effect>
                                <DropShadowEffect Color="#10B981" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Statistics & Search Row -->
            <Grid Grid.Row="1" Margin="20,0,20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Style="{StaticResource MiniStatCard}" Height="50">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10"
                                Background="#EFF6FF" Margin="0,0,12,0">
                            <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20"
                                                    Foreground="#3B82F6" HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                        </Border>

                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource UltraModernTextBox}"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 materialDesign:HintAssist.Hint="بحث بالاسم، الهاتف، البريد..."/>
                    </Grid>
                </Border>

                <!-- Total Customers Card -->
                <Border Grid.Column="2" CornerRadius="12" Padding="14,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="#A78BFA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="إجمالي العملاء" FontSize="11" Foreground="White" Opacity="0.9"/>
                        <TextBlock Text="{Binding TotalCustomers}" FontSize="24" FontWeight="Bold"
                                   Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Debtors Card -->
                <Border Grid.Column="4" CornerRadius="12" Padding="14,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#059669" Offset="0"/>
                            <GradientStop Color="#10B981" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="لنا (مدينون)" FontSize="11" Foreground="White" Opacity="0.9"/>
                        <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,4,0,0">
                            <Run Text="{Binding TotalDebtors, StringFormat={}{0:N0}}"/>
                            <Run Text="ج.م" FontSize="10"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Creditors Card -->
                <Border Grid.Column="6" CornerRadius="12" Padding="14,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#DC2626" Offset="0"/>
                            <GradientStop Color="#EF4444" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="علينا (دائنون)" FontSize="11" Foreground="White" Opacity="0.9"/>
                        <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,4,0,0">
                            <Run Text="{Binding TotalCreditors, StringFormat={}{0:N0}}"/>
                            <Run Text="ج.م" FontSize="10"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Customers List -->
            <Border Grid.Row="2" Style="{StaticResource UltraModernCard}"
                    Margin="20,0,20,20" Padding="0">
                <Grid>
                    <!-- List Header -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8FAFC" Padding="18,12"
                            CornerRadius="14,14,0,0" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="العميل" FontWeight="SemiBold"
                                       FontSize="12" Foreground="#64748B"/>
                            <TextBlock Grid.Column="1" Text="الهاتف" FontWeight="SemiBold"
                                       FontSize="12" Foreground="#64748B"/>
                            <TextBlock Grid.Column="2" Text="المدينة" FontWeight="SemiBold"
                                       FontSize="12" Foreground="#64748B"/>
                            <TextBlock Grid.Column="3" Text="الرصيد" FontWeight="SemiBold"
                                       FontSize="12" Foreground="#64748B"/>
                            <TextBlock Grid.Column="4" Text="إجراءات" FontWeight="SemiBold"
                                       FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Customers}"
                             SelectedItem="{Binding SelectedCustomer}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="Transparent"
                                                    BorderBrush="#F1F5F9" BorderThickness="0,0,0,1"
                                                    Padding="18,10">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#F8FAFC"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#EFF6FF"/>
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#3B82F6"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="3,0,0,0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Customer Info -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                                    <GradientStop Color="#0EA5E9" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                       Foreground="White" FontWeight="Bold" FontSize="14"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                           FontSize="13" Foreground="#1E293B"/>
                                                <Border Background="#DCFCE7" CornerRadius="5" Padding="6,2"
                                                        Margin="8,0,0,0" VerticalAlignment="Center"
                                                        Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="افتراضي" FontSize="9"
                                                               Foreground="#166534" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Email}" FontSize="11"
                                                       Foreground="#64748B" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Phone -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Phone" Width="14" Height="14"
                                                                Foreground="#64748B" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#475569"/>
                                    </StackPanel>

                                    <!-- City -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="MapMarker" Width="14" Height="14"
                                                                Foreground="#94A3B8" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding City}" FontSize="12" Foreground="#64748B"/>
                                    </StackPanel>

                                    <!-- Balance -->
                                    <Border Grid.Column="3" CornerRadius="8" Padding="10,6"
                                            VerticalAlignment="Center" HorizontalAlignment="Right"
                                            Margin="0,0,15,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding CurrentBalance, Converter={StaticResource BalanceToColorConverter}}" Opacity="0.12"/>
                                        </Border.Background>
                                        <TextBlock FontWeight="Bold" FontSize="13">
                                            <Run Text="{Binding CurrentBalance, StringFormat={}{0:N2}}"/>
                                            <Run Text="ج.م" FontSize="10"/>
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{Binding CurrentBalance, Converter={StaticResource BalanceToColorConverter}}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </Border>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="4" Orientation="Horizontal"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="36" Height="36"
                                                ToolTip="حذف"
                                                Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"
                                                                    Foreground="#EF4444"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding ShowEmptyCustomers, Converter={StaticResource BoolToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="AccountGroup" Width="64" Height="64"
                                                Foreground="#CBD5E1" HorizontalAlignment="Center"/>
                        <TextBlock Text="لا يوجد عملاء" FontSize="16" Foreground="#94A3B8"
                                   Margin="0,12,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <Border Grid.Row="1" Background="#FFFFFFCC"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="100"
                                         Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                            <TextBlock Text="جاري التحميل..." FontSize="13" Foreground="#64748B"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ══════════════════════════════════════════════════════════ -->
        <!--                    TRANSACTIONS PANEL                      -->
        <!-- ══════════════════════════════════════════════════════════ -->
        <Border Grid.Column="1" Width="1" Background="#E2E8F0" Margin="0,40"/>

        <Grid Grid.Column="2" Visibility="{Binding HasSelectedCustomer, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Customer Header -->
            <Border Grid.Row="0" Margin="16,20,20,16" CornerRadius="16" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0F172A" Offset="0"/>
                        <GradientStop Color="#1E293B" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="12"
                            Background="#3B82F6" Margin="0,0,14,0">
                        <TextBlock Text="{Binding SelectedCustomer.Name, Converter={StaticResource InitialsConverter}}"
                                   Foreground="White" FontWeight="Bold" FontSize="18"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedCustomer.Name}" FontSize="16"
                                   FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding SelectedCustomer.Phone}" FontSize="12"
                                   Foreground="#94A3B8" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ClearSelectionCommand}"
                            Width="36" Height="36">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#94A3B8"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Transaction Stats -->
            <Grid Grid.Row="1" Margin="16,0,20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource MiniStatCard}">
                    <StackPanel>
                        <TextBlock Text="إجمالي المبيعات" FontSize="11" Foreground="#64748B"/>
                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="#059669" Margin="0,5,0,0">
                            <Run Text="{Binding TotalSales, StringFormat={}{0:N0}}"/>
                            <Run Text="ج.م" FontSize="9"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource MiniStatCard}">
                    <StackPanel>
                        <TextBlock Text="المدفوع" FontSize="11" Foreground="#64748B"/>
                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="#3B82F6" Margin="0,5,0,0">
                            <Run Text="{Binding TotalPaid, StringFormat={}{0:N0}}"/>
                            <Run Text="ج.م" FontSize="9"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Transactions List -->
            <Border Grid.Row="2" Background="White" CornerRadius="16"
                    Margin="16,0,20,20" Padding="0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#000000" Opacity="0.06"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8FAFC" Padding="16,12"
                            CornerRadius="16,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Receipt" Width="18" Height="18"
                                                        Foreground="#3B82F6" VerticalAlignment="Center"/>
                                <TextBlock Text="آخر المعاملات" FontWeight="SemiBold" FontSize="14"
                                           Foreground="#1E293B" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                <Border Background="#EFF6FF" CornerRadius="10" Padding="8,3" Margin="12,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalTransactions}" FontSize="12"
                                               Foreground="#3B82F6" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            <!-- Export Button -->
                            <Button Grid.Column="1"
                                    Command="{Binding ExportTransactionsCommand}"
                                    ToolTip="تصدير المعاملات"
                                    Cursor="Hand"
                                    Visibility="{Binding HasTransactions, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="#10B981" CornerRadius="8" Padding="10,6">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Export" Width="16" Height="16"
                                                                                    Foreground="White" VerticalAlignment="Center"/>
                                                            <TextBlock Text="تصدير" FontSize="12" Foreground="White"
                                                                       Margin="6,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#059669"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Transactions List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,8"
                                  Visibility="{Binding HasTransactions, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding Transactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TransactionRowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10"
                                                    Background="#EFF6FF" Margin="0,0,12,0">
                                                <materialDesign:PackIcon Kind="Receipt" Width="20" Height="20"
                                                                        Foreground="#3B82F6" HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Details -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="فاتورة #" FontSize="13" Foreground="#64748B"/>
                                                    <TextBlock Text="{Binding Number}" FontSize="13"
                                                               FontWeight="SemiBold" Foreground="#1E293B"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}"
                                                           FontSize="11" Foreground="#94A3B8" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <!-- Amount -->
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Left">
                                                <TextBlock FontSize="14" FontWeight="Bold"
                                                           Foreground="#059669" HorizontalAlignment="Left">
                                                    <Run Text="{Binding Amount, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                                    <Run Text="ج.م" FontSize="10"/>
                                                </TextBlock>
                                                <Border Background="#FEF3C7" CornerRadius="6" Padding="6,2"
                                                        HorizontalAlignment="Left" Margin="0,4,0,0"
                                                        Visibility="{Binding Remaining, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock FontSize="10" Foreground="#92400E">
                                                        <Run Text="متبقي:"/>
                                                        <Run Text="{Binding Remaining, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty Transactions State - Only when customer is selected but has no transactions -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding ShowEmptyTransactions, Converter={StaticResource BoolToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="ReceiptTextOutline" Width="48" Height="48"
                                                Foreground="#CBD5E1" HorizontalAlignment="Center"/>
                        <TextBlock Text="لا توجد معاملات لهذا العميل" FontSize="14" Foreground="#94A3B8"
                                   Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <Border Grid.Row="1" Background="#FFFFFFCC"
                            Visibility="{Binding IsLoadingTransactions, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="100"
                                         Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                            <TextBlock Text="جاري التحميل..." FontSize="13" Foreground="#64748B"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Placeholder when no customer selected -->
        <Border Grid.Column="2" Visibility="{Binding HasSelectedCustomer, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverse}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <Border Width="80" Height="80" CornerRadius="20" Background="#F1F5F9">
                    <materialDesign:PackIcon Kind="GestureDoubleTap" Width="40" Height="40"
                                            Foreground="#94A3B8" HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="اختر عميل" FontSize="16" FontWeight="SemiBold"
                           Foreground="#64748B" Margin="0,16,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="اضغط على عميل لعرض معاملاته" FontSize="13"
                           Foreground="#94A3B8" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
