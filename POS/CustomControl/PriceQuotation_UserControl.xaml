<UserControl x:Class="POS.CustomControl.PriceQuotation_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d" MinWidth="800" MinHeight="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/UltraModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <validations:IndexPlusOneConverter x:Key="IndexPlusOneConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Products Selection -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="20" Padding="24,20" Margin="0,0,0,16">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7C3AED" Offset="0"/>
                        <GradientStop Color="#A855F7" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="عرض سعر" FontSize="24" FontWeight="Bold" Foreground="White" FlowDirection="RightToLeft"/>
                    <TextBlock Text="إنشاء عروض أسعار للعملاء" FontSize="12" Foreground="#E9D5FF" Margin="0,4,0,0" FlowDirection="RightToLeft"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource UltraModernCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource Gray50}" Padding="20,16" BorderBrush="{StaticResource Gray200}" BorderThickness="0,0,0,1">
                        <TextBlock Text="المنتجات المتاحة" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" FlowDirection="RightToLeft"/>
                    </Border>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" Style="{StaticResource UltraModernDataGrid}"
                              AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="المنتج" Width="*" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="السعر" Width="80" Binding="{Binding Price}"/>
                            <DataGridTemplateColumn Header="" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="إضافة" Style="{StaticResource UltraModernSuccessButton}" 
                                                Command="{Binding DataContext.AddProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}" Padding="8,4"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- RIGHT PANEL: Quotation Details -->
        <Border Grid.Column="1" Style="{StaticResource UltraModernCard}" Margin="0,20,20,20" Padding="32,28">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Customer Selection -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="العميل" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                        <ComboBox ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" 
                                  Style="{StaticResource UltraModernComboBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="تاريخ العرض" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                        <DatePicker SelectedDate="{Binding QuotationDate}" Style="{StaticResource UltraModernDatePicker}"/>
                    </StackPanel>
                </Grid>

                <!-- Items Header -->
                <Border Grid.Row="1" Background="{StaticResource Gray50}" Padding="16,12" CornerRadius="12" Margin="0,0,0,12">
                    <TextBlock Text="عناصر العرض" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" FlowDirection="RightToLeft"/>
                </Border>

                <!-- Items List -->
                <DataGrid Grid.Row="2" ItemsSource="{Binding QuotationItems}" Style="{StaticResource UltraModernDataGrid}"
                          AutoGenerateColumns="False" Margin="0,0,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="المنتج" Width="2*" Binding="{Binding ProductName}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الكمية" Width="*" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="السعر" Width="*" Binding="{Binding Price}"/>
                        <DataGridTextColumn Header="الإجمالي" Width="*" Binding="{Binding Total}" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource UltraModernGhostButton}" Width="32" Height="32" Padding="0"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Path Fill="{StaticResource Danger600Brush}" Width="14" Height="14" Stretch="Uniform"
                                              Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totals -->
                <Border Grid.Row="3" CornerRadius="16" Padding="24,20" Margin="0,0,0,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#7C3AED" Offset="0"/>
                            <GradientStop Color="#A855F7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="المجموع الكلي" FontSize="18" FontWeight="Bold" Foreground="White" FlowDirection="RightToLeft"/>
                        <TextBlock Grid.Column="1" Text="{Binding GrandTotal}" FontSize="32" FontWeight="ExtraBold" Foreground="White"/>
                    </Grid>
                </Border>

                <!-- Actions -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="حفظ العرض" Style="{StaticResource UltraModernSuccessButton}" Width="160" Command="{Binding SaveCommand}"/>
                    <Button Content="طباعة" Style="{StaticResource UltraModernPrimaryButton}" Width="140" Margin="12,0,0,0" Command="{Binding PrintCommand}"/>
                    <Button Content="إلغاء" Style="{StaticResource UltraModernDangerButton}" Width="120" Margin="12,0,0,0" Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
