<UserControl x:Class="POS.CustomControl.Moving_Products_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d" MinWidth="800" MinHeight="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/UltraModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <validations:IndexPlusOneConverter x:Key="IndexPlusOneConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="20" Margin="20,20,20,16" Padding="32,24">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#7C3AED" Offset="0"/>
                    <GradientStop Color="#A855F7" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="نقل المنتجات" FontSize="28" FontWeight="Bold" Foreground="White" FlowDirection="RightToLeft"/>
                <TextBlock Text="تحويل المنتجات بين المخازن" FontSize="13" Foreground="#E9D5FF" Margin="0,4,0,0" FlowDirection="RightToLeft"/>
            </StackPanel>
        </Border>

        <!-- Warehouse Selection -->
        <Border Grid.Row="1" Style="{StaticResource UltraModernCard}" Margin="20,0,20,16" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="من مخزن" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                    <ComboBox ItemsSource="{Binding Warehouses}" SelectedItem="{Binding SourceWarehouse}" 
                              Style="{StaticResource UltraModernComboBox}"/>
                </StackPanel>

                <Path Grid.Column="1" Fill="{StaticResource Accent600Brush}" Width="32" Height="32" Margin="24,28,24,0" Stretch="Uniform"
                      Data="M16.01 11H4v2h12.01v3L20 12l-3.99-4z"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="إلى مخزن" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Gray700Brush}" Margin="0,0,0,8" FlowDirection="RightToLeft"/>
                    <ComboBox ItemsSource="{Binding Warehouses}" SelectedItem="{Binding DestinationWarehouse}" 
                              Style="{StaticResource UltraModernComboBox}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Products to Move -->
        <Border Grid.Row="2" Style="{StaticResource UltraModernCard}" Margin="20,0,20,16" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource Gray50}" Padding="24,16" BorderBrush="{StaticResource Gray200}" BorderThickness="0,0,0,1">
                    <TextBlock Text="المنتجات المراد نقلها" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Gray900Brush}" FlowDirection="RightToLeft"/>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding ProductsToMove}" Style="{StaticResource UltraModernDataGrid}"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Width="60" 
                                            Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={StaticResource IndexPlusOneConverter}}"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource Gray500}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="المنتج" Width="3*" Binding="{Binding ProductName}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="المتوفر" Width="1*" Binding="{Binding AvailableQuantity}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الكمية المراد نقلها" Width="1.5*" Binding="{Binding QuantityToMove}"/>
                        <DataGridTemplateColumn Header="" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource UltraModernGhostButton}" Width="32" Height="32" Padding="0"
                                            Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Path Fill="{StaticResource Danger600Brush}" Width="14" Height="14" Stretch="Uniform"
                                              Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Actions -->
        <Border Grid.Row="3" Margin="20,0,20,20" Padding="20" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="تنفيذ النقل" Style="{StaticResource UltraModernSuccessButton}" Width="180" Command="{Binding TransferCommand}"/>
                <Button Content="إضافة منتج" Style="{StaticResource UltraModernPrimaryButton}" Width="160" Margin="12,0,0,0" Command="{Binding AddProductCommand}"/>
                <Button Content="إلغاء" Style="{StaticResource UltraModernDangerButton}" Width="120" Margin="12,0,0,0" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
