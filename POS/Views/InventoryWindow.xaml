<Window x:Class="POS.Views.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:POS.Validations"
        mc:Ignorable="d"
        Title="إدارة المخزون"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontFamily="{DynamicResource MaterialDesignFont}"
        Closed="Window_Closed">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="materialDesign:Card">
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16"
                                   materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="WarehouseOutline" Width="32" Height="32"
                                             VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="إدارة المخزون" FontSize="24" FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Warehouse Selector -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Store" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Warehouses}"
                              SelectedItem="{Binding SelectedWarehouse}"
                              DisplayMemberPath="Name"
                              MinWidth="200"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="اختر المخزن"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ManageWarehouseCommand}"
                            ToolTip="إدارة المخازن"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="CogOutline"/>
                    </Button>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White" Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close"/>
                </Button>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Product Form -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <materialDesign:Card Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <!-- Form Header -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="PackageVariantClosed"
                                                     Width="24" Height="24"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                            <TextBlock Text="بيانات المنتج" Style="{StaticResource SectionHeader}"
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Product Name -->
                        <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="اسم المنتج *"
                                 IsEnabled="{Binding IsProductNameInputEnabled}"
                                 Margin="0,0,0,16"
                                 TextChanged="TextBox_TextChanged"/>

                        <!-- Category -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding ProductCategories}"
                                      SelectedItem="{Binding SelectedProductCategory}"
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="فئة المنتج *"
                                      IsEnabled="{Binding IsProductCategoriesEnabled}"/>
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding ManageCategoryCommand}"
                                    IsEnabled="{Binding IsManageCategoryCommandEnabled}"
                                    ToolTip="إدارة الفئات"
                                    Margin="8,0,0,0">
                                <materialDesign:PackIcon Kind="PlusCircleOutline"/>
                            </Button>
                        </Grid>

                        <!-- Barcode -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding Barcode, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="الباركود *"
                                     IsEnabled="{Binding IsBarcodeInputEnabled}"/>
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding GenerateRandomBarcodeCommand}"
                                    IsEnabled="{Binding IsGenerateBarcodeButtonEnabled}"
                                    Content="عشوائي"
                                    Margin="8,0,0,0"/>
                        </Grid>

                        <!-- Unit -->
                        <ComboBox ItemsSource="{Binding Units}"
                                  SelectedItem="{Binding SelectedUnit}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="الوحدة *"
                                  IsEnabled="{Binding IsUnitsInputEnabled}"
                                  Margin="0,0,0,16"/>

                        <!-- Quantity -->
                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="الكمية الموجودة بالمخازن"
                                 IsEnabled="{Binding IsQuantityInputEnabled}"
                                 Margin="0,0,0,16"/>

                        <!-- Prices Row -->
                        <TextBlock Text="الأسعار" Style="{StaticResource SectionHeader}" Margin="0,8,0,12"/>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding RetailPrice, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="سعر البيع"
                                     IsEnabled="{Binding IsRetailPriceInputEnabled}"/>
                            <TextBox Grid.Column="2"
                                     Text="{Binding MinSalePrice, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="أقل سعر بيع"/>
                        </Grid>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding ProfitMargin, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="هامش الربح %"/>
                            <TextBox Grid.Column="2"
                                     Text="{Binding MinStock, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="حد الطلب"/>
                        </Grid>

                        <!-- Dimensions Section -->
                        <Expander Header="المواصفات الإضافية"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,8,0,0">
                            <StackPanel Margin="0,16,0,0">
                                <!-- Weight -->
                                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="الوزن"
                                         IsEnabled="{Binding IsWeightInputEnabled}"
                                         Margin="0,0,0,16"/>

                                <!-- Dates -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker Grid.Column="0"
                                                SelectedDate="{Binding ProductionDate}"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="تاريخ الإنتاج"/>
                                    <DatePicker Grid.Column="2"
                                                SelectedDate="{Binding ExpiryDate}"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="تاريخ الصلاحية"/>
                                </Grid>

                                <!-- Description -->
                                <TextBox Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="وصف المنتج"
                                         IsEnabled="{Binding IsProductDescriptionEnabled}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="80"
                                         VerticalContentAlignment="Top"
                                         Margin="0,0,0,16"/>

                                <!-- Image -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Command="{Binding ChooseImageCommand}"
                                            IsEnabled="{Binding IsImageSelectionEnabled}"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ImagePlus" Margin="0,0,8,0"/>
                                            <TextBlock Text="اختيار صورة"/>
                                        </StackPanel>
                                    </Button>
                                    <Border Grid.Column="1" Width="60" Height="60"
                                            Margin="16,0,0,0" CornerRadius="8"
                                            BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                                            BorderThickness="1">
                                        <Image Source="{Binding ProductImageSource}" Stretch="UniformToFill"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>
            </ScrollViewer>

            <!-- Right Panel - Products List and Search -->
            <Grid Grid.Column="1" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Card -->
                <materialDesign:Card Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Tabs -->
                        <TabControl Grid.Column="0" Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                                    HorizontalAlignment="Stretch">

                            <!-- Search by Barcode -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Barcode" Margin="0,0,8,0"/>
                                        <TextBlock Text="الباركود"/>
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBox Text="{Binding BarcodeSearchText}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="بحث بالباركود"
                                             Width="250"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Command="{Binding SearchByBarcodeCommand}"
                                            Content="بحث"
                                            Margin="8,0,0,0"/>
                                </StackPanel>
                            </TabItem>

                            <!-- Search by Name -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="TextSearch" Margin="0,0,8,0"/>
                                        <TextBlock Text="الاسم"/>
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBox Text="{Binding ItemNameSearchText}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="بحث بالاسم"
                                             Width="250"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Command="{Binding SearchByItemNameCommand}"
                                            Content="بحث"
                                            Margin="8,0,0,0"/>
                                </StackPanel>
                            </TabItem>

                            <!-- Search by Category -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="TagMultiple" Margin="0,0,8,0"/>
                                        <TextBlock Text="الفئة"/>
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <ComboBox ItemsSource="{Binding Categories}"
                                              SelectedItem="{Binding SelectedCategory}"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="اختر الفئة"
                                              Width="250"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Command="{Binding SearchByCategoryCommand}"
                                            Content="بحث"
                                            Margin="8,0,0,0"/>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </materialDesign:Card>

                <!-- Products DataGrid -->
                <materialDesign:Card Grid.Row="1" Style="{StaticResource ModernCard}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- DataGrid Header -->
                        <Border Grid.Row="0" Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                                Padding="16,12">
                            <Grid>
                                <TextBlock Text="قائمة المنتجات"
                                           FontSize="16" FontWeight="Medium"
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                                <TextBlock Text="{Binding ProductsList.Count, StringFormat='({0}) منتج'}"
                                           HorizontalAlignment="Left"
                                           Margin="120,0,0,0"
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                                           Opacity="0.7"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1"
                                  Name="ProductsList"
                                  ItemsSource="{Binding ProductsList}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  SelectionChanged="ProductsList_SelectionChanged"
                                  materialDesign:DataGridAssist.CellPadding="16 8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="16 8"
                                  HeadersVisibility="Column"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="2*"/>
                                <DataGridTextColumn Header="الفئة" Binding="{Binding Category.Name}" Width="*"/>
                                <DataGridTextColumn Header="الباركود" Binding="{Binding Barcode}" Width="*"/>
                                <DataGridTextColumn Header="سعر البيع" Binding="{Binding SalePrice, StringFormat=N2}" Width="80"/>
                                <DataGridTextColumn Header="الوحدة" Binding="{Binding Type}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>

        <!-- Bottom Action Bar -->
        <materialDesign:Card Grid.Row="2" UniformCornerRadius="0" Padding="16,12"
                             materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Primary Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Add Mode Actions -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding SaveAndAddCommand}"
                            Visibility="{Binding SaveAndAddVisibility}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                            <TextBlock Text="حفظ وإضافة"/>
                        </StackPanel>
                    </Button>

                    <!-- Edit Mode Actions -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding SaveAndEditCommand}"
                            Visibility="{Binding SaveAndEditVisibility}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSaveEdit" Margin="0,0,8,0"/>
                            <TextBlock Text="حفظ التعديل"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding CancelCommand}"
                            Visibility="{Binding CancelVisibility}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cancel" Margin="0,0,8,0"/>
                            <TextBlock Text="إلغاء"/>
                        </StackPanel>
                    </Button>

                    <!-- View Mode Actions -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddCommand}"
                            Visibility="{Binding AddVisibility}"
                            Background="{DynamicResource MaterialDesign.Brush.Primary}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0"/>
                            <TextBlock Text="إضافة منتج"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding EditCommand}"
                            Visibility="{Binding EditVisibility}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil" Margin="0,0,8,0"/>
                            <TextBlock Text="تعديل"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding DeleteCommand}"
                            Visibility="{Binding DeleteVisibility}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Error}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Error}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                            <TextBlock Text="حذف"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Secondary Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ExportToExcelCommand}"
                            Foreground="{StaticResource PrimaryGreenColor}"
                            BorderBrush="{StaticResource PrimaryGreenColor}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,8,0"/>
                            <TextBlock Text="تصدير Excel"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ImportFromExcelCommand}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0"/>
                            <TextBlock Text="استيراد"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding CreateTemplateCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" Margin="0,0,8,0"/>
                            <TextBlock Text="قالب"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
