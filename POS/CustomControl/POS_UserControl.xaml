<UserControl x:Class="POS.CustomControl.POS_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validations="clr-namespace:POS.Validations"
             mc:Ignorable="d"
             MinWidth="1366"
             MinHeight="768"
             FontFamily="Segoe UI"
             FlowDirection="RightToLeft">
    <UserControl.Resources>
        <validations:DoubleTextConverter x:Key="DoubleTextConverter" />
        <Style x:Key="PosTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height" Value="38" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="CaretBrush" Value="#111827" />
            <Setter Property="SelectionBrush" Value="#BFD7FF" />
            <Setter Property="SelectionOpacity" Value="0.7" />
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
        </Style>

        <Style x:Key="BillButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="False">
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="#E0E0E0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BillBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF3F51B5" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="Padding" Value="6,1" />
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PosDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="RowHeight" Value="36" />
            <Setter Property="AlternationCount" Value="100000" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="Background" Value="White" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F7FA" />
        </Style>
    </UserControl.Resources>

    <Grid Background="#FAFAFA" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" FlowDirection="RightToLeft">
                    <TextBlock Text="شاشة البيع" FontSize="16" FontWeight="Bold" Margin="0,0,0,4" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="فاتورة:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBlock FontWeight="Bold" Margin="0,0,12,0">
                            <Run Text="#" />
                            <Run Text="{Binding InvoiceNumber}" />
                        </TextBlock>
                        <TextBlock Text="التاريخ:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding InvoiceDate, StringFormat={}{0:yyyy/MM/dd HH:mm}}" Margin="0,0,12,0" />
                        <TextBlock Text="الكاشير:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding CashierName}" />
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                        Width="36"
                        Height="36"
                        Margin="6,0,0,0"
                        Background="#FFE0E0E0"
                        BorderThickness="0"
                        ToolTip="إغلاق"
                        Command="{Binding CloseWindowCommand}">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                </Button>
            </Grid>
        </materialDesign:Card>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                            <TextBlock Text="إضافة منتج" FontSize="18" FontWeight="Bold" />
                            <TextBlock Text="ابحث بالاسم أو الباركود" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0" />
                        </StackPanel>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="44"
                                    Height="44"
                                    CornerRadius="8"
                                    Background="#EEF2FF"
                                    BorderBrush="#C7D2FE"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="BarcodeScan" Width="22" Height="22" Foreground="#1D4ED8" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Border>

                            <Border Grid.Column="1"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Background="White"
                                    Height="44">
                                <Grid>
                                    <TextBox x:Name="SearchTextBox"
                                             FontSize="16"
                                             Foreground="#111827"
                                             Background="Transparent"
                                             CaretBrush="#111827"
                                             Padding="12,0"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="0"
                                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Delay=300}">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding AcceptCommand}" />
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    <!-- Placeholder -->
                                    <TextBlock Text="🔍 ابحث باسم المنتج أو الباركود..."
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="12,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <Button Grid.Column="2"
                                    Width="44"
                                    Height="44"
                                    Margin="8,0,0,0"
                                    Background="#1D4ED8"
                                    Foreground="White"
                                    ToolTip="إضافة للسلة"
                                    AutomationProperties.Name="إضافة منتج للسلة"
                                    Command="{Binding AcceptCommand}">
                                <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" />
                            </Button>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- حقل الكمية -->
                            <Border Grid.Column="0" BorderBrush="#3B82F6" BorderThickness="2" CornerRadius="8" Background="White">
                                <Grid>
                                    <TextBlock Text="الكمية المطلوبة"
                                               Foreground="#3B82F6"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right"
                                               Margin="12,8,12,0"
                                               VerticalAlignment="Top"/>
                                    <TextBox x:Name="QuantityTextBox"
                                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource DoubleTextConverter}}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="#1F2937"
                                             HorizontalContentAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             Padding="12,28,12,8"
                                             Height="70"
                                             validations:DecimalTextBoxBehavior.AllowDecimalPoint="False"
                                             InputMethod.IsInputMethodEnabled="False"/>
                                    <!-- Placeholder -->
                                    <TextBlock Text="أدخل الكمية"
                                               Foreground="#D1D5DB"
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,12,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=QuantityTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- حقل السعر -->
                            <Border Grid.Column="2" BorderBrush="#10B981" BorderThickness="2" CornerRadius="8" Background="White">
                                <Grid>
                                    <TextBlock Text="سعر الوحدة"
                                               Foreground="#10B981"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right"
                                               Margin="12,8,12,0"
                                               VerticalAlignment="Top"/>
                                    <TextBox x:Name="SalePriceTextBox"
                                             Text="{Binding SalePrice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource DoubleTextConverter}}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="#059669"
                                             HorizontalContentAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             Padding="12,28,12,8"
                                             Height="70"
                                             validations:DecimalTextBoxBehavior.AllowDecimalPoint="True"
                                             InputMethod.IsInputMethodEnabled="False"/>
                                    <!-- Placeholder -->
                                    <TextBlock Text="أدخل السعر"
                                               Foreground="#D1D5DB"
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,12,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=SalePriceTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="العميل" FontWeight="SemiBold" Margin="0,0,0,6" />
                            <TextBox Style="{StaticResource PosTextBoxStyle}"
                                     Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     TextAlignment="Right"
                                     FlowDirection="RightToLeft"
                                     Height="44"
                                     VerticalContentAlignment="Center"
                                     Padding="12,0"
                                     FontSize="16"
                                     Foreground="#111827"
                                     CaretBrush="#111827"
                                     materialDesign:HintAssist.Hint="ابحث باسم العميل أو رقم الهاتف"
                                     Margin="0,0,0,8" />
                            <ComboBox ItemsSource="{Binding CustomersView}"
                                      SelectedItem="{Binding SelectedCustomer}"
                                      MinHeight="44"
                                      IsEditable="True"
                                      IsReadOnly="True"
                                      StaysOpenOnEdit="True"
                                      Text="{Binding SelectedCustomer.Name, Mode=OneWay}"
                                      TextSearch.TextPath="Name"
                                      FlowDirection="RightToLeft"
                                      VerticalContentAlignment="Center"
                                      Padding="6,0">
                                <ComboBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </ComboBox.Resources>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Phone}"
                                                       FontSize="11"
                                                       Foreground="#64748B" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <Border Background="#F8FAFC" Padding="16" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <!-- اسم المنتج -->
                                <TextBlock Text="{Binding ItemName, TargetNullValue='اختر منتج للبدء'}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1E293B"
                                           TextWrapping="Wrap"/>

                                <!-- معلومات المنتج -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- المخزون المتاح -->
                                    <Border Grid.Column="0" Background="#EFF6FF" CornerRadius="8" Padding="12" Margin="0,0,6,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="المخزون المتاح" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding RemainingQuantity, StringFormat={}{0:0.##}, TargetNullValue='--'}"
                                                       FontSize="24"
                                                       FontWeight="Bold"
                                                       Foreground="#2563EB"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- سعر البيع -->
                                    <Border Grid.Column="1" Background="#F0FDF4" CornerRadius="8" Padding="12" Margin="6,0,0,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="سعر البيع" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding SelectedProduct.SalePrice, StringFormat={}{0:F2}, TargetNullValue='--'}"
                                                           FontSize="24"
                                                           FontWeight="Bold"
                                                           Foreground="#16A34A"/>
                                                <TextBlock Text=" ج" FontSize="14" Foreground="#64748B" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- تلميح -->
                                <Border Background="#FEF3C7" CornerRadius="6" Padding="8" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="💡" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="يمكن تعديل الكمية أو السعر قبل الإضافة"
                                                   FontSize="11"
                                                   Foreground="#92400E"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1" Margin="0,0,0,8" Padding="8">
                    <DataGrid Style="{StaticResource PosDataGridStyle}"
                              ItemsSource="{Binding CartItemsList}"
                              FlowDirection="RightToLeft">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="#" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center"
                                                   Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=AlternationIndex}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="اسم المنتج" Width="*" Binding="{Binding Product.Name}" />

                            <DataGridTextColumn Header="الكمية" Width="80"
                                                Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="السعر" Width="100"
                                                Binding="{Binding SalePrice, StringFormat={}{0:F2}}" />

                            <DataGridTextColumn Header="الإجمالي" Width="110"
                                                Binding="{Binding Total, StringFormat={}{0:F2}}" />

                            <DataGridTemplateColumn Header="حذف" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.RemoveCartItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#F44336">
                                            <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="2" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="عدد الأصناف:" />
                            <TextBlock Text="الكمية الإجمالية:" Margin="0,4,0,0" />
                            <TextBlock Text="المجموع الفرعي:" Margin="0,4,0,0" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                            <TextBlock Text="{Binding CartItemsCount, StringFormat={}{0} صنف}" />
                            <TextBlock Text="{Binding TotalQuantity, StringFormat={}{0:0.##}}" Margin="0,4,0,0" />
                            <TextBlock Text="{Binding SubTotal, StringFormat={}{0:F2} جنيه}" Margin="0,4,0,0" FontSize="18" FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Padding="20" Margin="0,0,0,8">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E3F2FD" Offset="0" />
                            <GradientStop Color="#BBDEFB" Offset="1" />
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="المبلغ المطلوب" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:F2} جنيه}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#0D47A1"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0" />
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="الفئات النقدية" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" />
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CashBills}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource BillButtonStyle}"
                                                Background="{Binding Background}"
                                                Command="{Binding DataContext.AddBillCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Value}">
                                            <Grid>
                                                <Border Style="{StaticResource BillBadgeStyle}">
                                                    <TextBlock Text="{Binding Count, StringFormat=x{0}}" Foreground="White" FontSize="10" />
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Label}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" />
                                                    <TextBlock Text="جنيه" FontSize="10" HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="2" Padding="16" Margin="0,0,0,8">
                    <Border BorderBrush="#F59E0B" BorderThickness="2" CornerRadius="8" Background="White">
                        <Grid>
                            <TextBlock Text="أدخل المبلغ يدوياً"
                                       Foreground="#F59E0B"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       Margin="12,8,12,0"
                                       VerticalAlignment="Top"/>
                            <TextBox x:Name="ManualAmountTextBox"
                                     Text="{Binding ManualAmount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource DoubleTextConverter}}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     Foreground="#D97706"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Padding="12,28,12,8"
                                     Height="75"
                                     validations:DecimalTextBoxBehavior.AllowDecimalPoint="True"
                                     InputMethod.IsInputMethodEnabled="False"/>
                            <!-- Placeholder -->
                            <TextBlock Text="💵 المبلغ المدفوع"
                                       Foreground="#D1D5DB"
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,12,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=ManualAmountTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="3" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="المبلغ المطلوب:" />
                            <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat={}{0:F2} جنيه}" FontWeight="Bold" />
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="المبلغ المدفوع:" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding AmountPaid, StringFormat={}{0:F2} جنيه}"
                                       FontSize="18"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F44336" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPaymentComplete}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="الباقي:" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ChangeDisplay}"
                                       FontSize="22"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChangePositive}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsChangeNegative}" Value="True">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Separator Margin="0,8" />
                        <TextBlock Text="الفئات المدفوعة:" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <TextBlock Text="{Binding BillBreakdown}"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Grid.Row="4">
                    <Button Height="60"
                            FontSize="18"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding CompletePaymentCommand}"
                            IsEnabled="{Binding CanCompletePayment}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Margin="0,0,8,0" />
                            <TextBlock Text="إتمام الدفع" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Print Invoice Button -->
                    <Button Height="48"
                            FontSize="16"
                            Background="#2196F3"
                            Foreground="White"
                            Command="{Binding PrintInvoiceCommand}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Printer" Width="20" Height="20" Margin="0,0,8,0" />
                            <TextBlock Text="طباعة الفاتورة" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Height="48"
                                Background="#9E9E9E"
                                Foreground="White"
                                Content="مسح"
                                Command="{Binding ClearPaymentCommand}"
                                Margin="0,0,6,0" />
                        <Button Grid.Column="1"
                                Height="48"
                                Background="#F44336"
                                Foreground="White"
                                Content="إلغاء"
                                Command="{Binding CancelSaleCommand}"
                                Margin="6,0,0,0" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
