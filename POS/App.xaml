<Application x:Class="POS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:POS"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:control="http://filterdatagrid.control.com/2021"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Theme -->
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="Indigo"
                                             SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!-- Custom Fonts -->
                <ResourceDictionary>
                    <FontFamily x:Key="Montserrat">/Assets/Fonts/#Montserrat</FontFamily>
                    <FontFamily x:Key="Montserrat_Bold">/Assets/Fonts/#Montserrat Bold</FontFamily>
                    <FontFamily x:Key="Montserrat_Medium">/Assets/Fonts/#Montserrat Medium</FontFamily>
                    <FontFamily x:Key="Montserrat_Thin">/Assets/Fonts/#Montserrat Thin</FontFamily>
                    <FontFamily x:Key="Montserrat_Semibold">/Assets/Fonts/#Montserrat Semibold</FontFamily>
                    <FontFamily x:Key="Montserrat_Black">/Assets/Fonts/#Montserrat Black</FontFamily>
                </ResourceDictionary>

                <!-- App Colors -->
                <ResourceDictionary>
                    <CornerRadius x:Key="AppCornerRadius">8</CornerRadius>

                    <!-- Background Colors -->
                    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#F5F7FA"/>
                    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#FFFFFF"/>

                    <!--Window Border Colors-->
                    <Color x:Key="winBorderColor1">#3F51B5</Color>
                    <Color x:Key="winBorderColor2">#009688</Color>
                    <Color x:Key="winBorderColor3">#00BCD4</Color>

                    <!-- Typography Colors -->
                    <SolidColorBrush x:Key="PrimaryTextColor" Color="#212121"/>
                    <SolidColorBrush x:Key="SecundaryTextColor" Color="#757575"/>
                    <SolidColorBrush x:Key="TertiaryTextColor" Color="#9E9E9E"/>

                    <!-- Blue/Indigo Colors-->
                    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#3F51B5"/>
                    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#5C6BC0"/>
                    <SolidColorBrush x:Key="TertiaryBlueColor" Color="#7986CB"/>

                    <!-- Red Colors-->
                    <SolidColorBrush x:Key="PrimaryRedColor" Color="#F44336"/>
                    <SolidColorBrush x:Key="SecundaryRedColor" Color="#EF5350"/>
                    <SolidColorBrush x:Key="TertiaryRedColor" Color="#E57373"/>

                    <!-- Green Colors-->
                    <SolidColorBrush x:Key="PrimaryGreenColor" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="SecundaryGreenColor" Color="#66BB6A"/>
                    <SolidColorBrush x:Key="TertiaryGreenColor" Color="#81C784"/>

                    <!-- Orange Colors-->
                    <SolidColorBrush x:Key="PrimaryOrangeColor" Color="#FF9800"/>
                    <SolidColorBrush x:Key="SecundaryOrangeColor" Color="#FFA726"/>
                    <SolidColorBrush x:Key="TertiaryOrangeColor" Color="#FFB74D"/>

                    <!-- Yellow Colors-->
                    <SolidColorBrush x:Key="PrimaryYellowColor" Color="#FFEB3B"/>
                    <SolidColorBrush x:Key="SecundaryYellowColor" Color="#FFEE58"/>
                    <SolidColorBrush x:Key="TertiaryYellowColor" Color="#FFF176"/>

                    <!-- Teal Colors-->
                    <SolidColorBrush x:Key="PrimaryTealColor" Color="#009688"/>
                    <SolidColorBrush x:Key="SecundaryTealColor" Color="#26A69A"/>
                    <SolidColorBrush x:Key="TertiaryTealColor" Color="#4DB6AC"/>

                    <!-- White -->
                    <SolidColorBrush x:Key="PrimaryWhiteColor" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="SecundaryWhiteColor" Color="#F5F5F5"/>
                    <SolidColorBrush x:Key="TertiaryWhiteColor" Color="#FFFFFF"/>

                    <!-- Black -->
                    <SolidColorBrush x:Key="PrimaryBlackColor" Color="#212121"/>
                    <SolidColorBrush x:Key="SecundaryBlackColor" Color="#424242"/>
                    <SolidColorBrush x:Key="TertiaryBlackColor" Color="#616161"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
