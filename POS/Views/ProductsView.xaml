<UserControl x:Class="POS.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
             TextElement.FontFamily="{DynamicResource MaterialDesignFont}"
             FlowDirection="RightToLeft"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="materialDesign:Card">
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <!-- Pill Button Style -->
        <Style x:Key="PillButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="InStockBadge" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>
        <Style x:Key="LowStockBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>
        <Style x:Key="OutOfStockBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0"
                            Style="{StaticResource ModernCard}"
                            Margin="16,16,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title & Stats -->
                <StackPanel Grid.Column="0"
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="PackageVariant"
                                           Width="32"
                                           Height="32"
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                           Margin="0,0,12,0"/>
                    <TextBlock Text="إدارة المنتجات"
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              VerticalAlignment="Center"/>

                    <!-- Stats Badge -->
                    <Border Background="{DynamicResource MaterialDesign.Brush.Primary}"
                           CornerRadius="12"
                           Padding="12,4"
                           Margin="16,0,0,0">
                        <TextBlock Text="{Binding ProductsList.Count, StringFormat='{}{0} منتج'}"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  FontSize="12"/>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           HorizontalAlignment="Left">

                    <!-- Add Product -->
                    <Button Style="{StaticResource PillButton}"
                           Command="{Binding AddCommand}"
                           Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="إضافة منتج"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Export to Excel -->
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                           Command="{Binding ExportToExcelCommand}"
                           Margin="0,0,8,0"
                           Height="40"
                           materialDesign:ButtonAssist.CornerRadius="20">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel"
                                                    VerticalAlignment="Center"
                                                    Foreground="{StaticResource PrimaryGreenColor}"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="تصدير"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Import from Excel -->
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                           Command="{Binding ImportFromExcelCommand}"
                           Height="40"
                           materialDesign:ButtonAssist.CornerRadius="20">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileImport"
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="استيراد"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Search & Filter Section -->
        <materialDesign:Card Grid.Row="1"
                            Style="{StaticResource ModernCard}"
                            Margin="16,0,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Column="0"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        materialDesign:HintAssist.Hint="بحث عن منتج..."
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"/>

                <!-- Category Filter -->
                <ComboBox Grid.Column="1"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         materialDesign:HintAssist.Hint="الفئة"
                         ItemsSource="{Binding ProductCategories}"
                         DisplayMemberPath="Name"
                         SelectedItem="{Binding FilterCategory}"
                         Margin="0,0,8,0"
                         VerticalAlignment="Center"/>

                <!-- Warehouse Filter -->
                <ComboBox Grid.Column="2"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         materialDesign:HintAssist.Hint="المخزن"
                         ItemsSource="{Binding Warehouses}"
                         DisplayMemberPath="Name"
                         SelectedItem="{Binding SelectedWarehouse}"
                         Margin="0,0,8,0"
                         VerticalAlignment="Center"/>

                <!-- Clear Filters -->
                <Button Grid.Column="3"
                       Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding ClearFiltersCommand}"
                       ToolTip="مسح الفلاتر"
                       VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="FilterRemove"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Products Grid -->
        <materialDesign:Card Grid.Row="2"
                            Style="{StaticResource ModernCard}"
                            Padding="0"
                            Margin="16,0,16,8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- DataGrid Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                        Padding="16,12"
                        CornerRadius="12,12,0,0">
                    <TextBlock Text="قائمة المنتجات"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                </Border>

                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding ProductsList}"
                         SelectedItem="{Binding SelectedProduct}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         SelectionMode="Single"
                         IsReadOnly="True"
                         materialDesign:DataGridAssist.CellPadding="12 8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="12 8"
                         HeadersVisibility="Column"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         GridLinesVisibility="Horizontal"
                         BorderThickness="0">

                    <DataGrid.Columns>

                        <!-- Image Column -->
                        <DataGridTemplateColumn Header="" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                                           CornerRadius="8"
                                           Width="40"
                                           Height="40">
                                        <materialDesign:PackIcon Kind="PackageVariant"
                                                               Width="24"
                                                               Height="24"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Product Name -->
                        <DataGridTemplateColumn Header="المنتج" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                 FontWeight="SemiBold"
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Barcode}"
                                                 FontSize="11"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}"
                                                 Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Category -->
                        <DataGridTemplateColumn Header="الفئة" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Category.Name}"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                 FontSize="11"
                                                 FontWeight="Medium"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Price -->
                        <DataGridTemplateColumn Header="السعر" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SalePrice, StringFormat=N2}"
                                             FontWeight="SemiBold"
                                             FontSize="14"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Unit -->
                        <DataGridTextColumn Header="الوحدة"
                                           Binding="{Binding Type}"
                                           Width="80"/>

                        <!-- Stock Status -->
                        <DataGridTemplateColumn Header="الحالة" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12"
                                           Padding="8,4"
                                           HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <TextBlock Text="{Binding StockStatus}"
                                                 FontSize="11"
                                                 FontWeight="Medium">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                            <Setter Property="Foreground" Value="#E65100"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="الإجراءات" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                               HorizontalAlignment="Center">

                                        <!-- Edit -->
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Command="{Binding DataContext.EditCommand,
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               ToolTip="تعديل"
                                               Margin="4,0">
                                            <materialDesign:PackIcon Kind="Pencil"
                                                                   Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                        </Button>

                                        <!-- Delete -->
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Command="{Binding DataContext.DeleteCommand,
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               ToolTip="حذف"
                                               Margin="4,0">
                                            <materialDesign:PackIcon Kind="Delete"
                                                                   Foreground="#C62828"/>
                                        </Button>

                                        <!-- View Details -->
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Command="{Binding DataContext.ViewDetailsCommand,
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               ToolTip="عرض التفاصيل"
                                               Margin="4,0">
                                            <materialDesign:PackIcon Kind="Eye"
                                                                   Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Footer / Stats -->
        <materialDesign:Card Grid.Row="3"
                            Style="{StaticResource ModernCard}"
                            Margin="16,0,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Items Info -->
                <TextBlock Grid.Column="0"
                          VerticalAlignment="Center">
                    <Run Text="عرض"/>
                    <Run Text="{Binding ProductsList.Count, Mode=OneWay}" FontWeight="SemiBold"/>
                    <Run Text="منتج"/>
                </TextBlock>

                <!-- Quick Stats -->
                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           Margin="16,0">
                    <Border Background="#E8F5E9" CornerRadius="8" Padding="12,6" Margin="4,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Foreground="#2E7D32"
                                                    Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding InStockCount, StringFormat='{}{0} متوفر'}"
                                      Foreground="#2E7D32" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="8" Padding="12,6" Margin="4,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" Foreground="#E65100"
                                                    Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding LowStockCount, StringFormat='{}{0} منخفض'}"
                                      Foreground="#E65100" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFEBEE" CornerRadius="8" Padding="12,6" Margin="4,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CloseCircle" Foreground="#C62828"
                                                    Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding OutOfStockCount, StringFormat='{}{0} نفد'}"
                                      Foreground="#C62828" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="3"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Command="{Binding RefreshCommand}"
                       Height="36"
                       materialDesign:ButtonAssist.CornerRadius="18">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Margin="0,0,6,0"/>
                        <TextBlock Text="تحديث"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
